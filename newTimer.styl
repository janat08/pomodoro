timeout = 1880s

minsSize = 8rem
secsSize = 8rem
pretimeout = timeout - 1s
minstens = (6000s - timeout + 599s) * -1
tmod = timeout % 600
minsones = (600s - tmod + 59s) * -1
secstens = (60s - (tmod % 60) + 9s) * -1
secsones = (10s - (tmod % 10)) * -1


a
  text-decoration none
.fr
  display flex

.timer-wrap
//   background-size cover
//   border 1.4rem solid white
  padding 2rem
  color black
  width 486px
  box-sizing border-box
  margin 0 auto 1rem auto
  .timer
    padding 1rem
    position relative
    // background #031722
    // box-shadow 0 0 1rem black
    .numbers
      align-items flex-end
      .mins
        font-size 8rem
        line-height 6rem
        height 10rem
        overflow hidden
        &.ones .numlist
          animation minones-jaggy 600s linear infinite
          animation-delay minsones
        &.tens .numlist
          animation mintens-jaggy 6000s linear forwards
          animation-delay minstens
      .secs
        font-size 8rem
        line-height 6rem
        height 10rem
        overflow hidden
        &.ones .numlist
          animation secones-jaggy 10s linear infinite
          animation-delay secsones
        &.tens .numlist
          animation sectens-jaggy 60s linear infinite
          animation-delay secstens
      .mins, .secs
        background linear-gradient(top, #0C1A23,#152836,#0C1A23)
        box-shadow inset 0 0 3px rgba(255,255,255,0.2)
        margin-right 0.5rem
      .seperator
        height: 8rem
        font-size 8rem
        line-height 7rem
        margin-right 0.5rem
    
@keyframes secones-jaggy
  for i in 0..10
    {10% * i}
      transform translateY(-8rem * i)
@keyframes sectens-jaggy
  for i in 0..6
    {100% / 6 * i}
      transform translateY(-8rem * i)
@keyframes minones-jaggy
  for i in 0..10
    {10% * i}
      transform translateY(-8rem * i)
@keyframes mintens-jaggy
  for i in 0..10
    {100% / 10 * i}
      transform translateY(-8rem * i)
